{
  "browser_action": {
    "default_icon": "icons/icon48.png"
  },
  "background": {
    "scripts": ["./src/background.js"],
    "persistent": true
  },
  "manifest_version": 2,
  "name": "meta",
  "version": "0.0.1",
  "permissions": [
    "tabs",
    "*://*/*"
  ],
  "description": "Meta is a web application that puts online news meta-data back in the hands of the user.",
  "icons": { "16" : "icons/icon16.png", "48" : "icons/icon48.png", "128" : "icons/icon128.png" }
}
